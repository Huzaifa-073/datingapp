<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dating" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorSecondary">@color/red</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">#ffffff</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item> <!-- Set the desired border color -->
        <item name="hintTextColor">@color/black</item> <!-- Set the desired hint text color -->
    </style>
    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item> <!-- Set the desired border color -->
    </style>

    <style name="Theme.Dating" parent="Base.Theme.Dating" />

    <!-- res/values/styles.xml -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#FFFFFF</item>
        <item name="itemIconTint">#757575</item>
        <item name="itemTextColor">#757575</item>
    </style>

    <style name="MyBottomNavigationItemStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
    </style>


</resources>